<div id="trackReplay" style="display: none">
    <table>
        <tr name="trackControls"><td colspan="4" width="220px">
                                     <a href="#" id="trackBackward" title="Slower"><span class="ui-icon ui-icon-seek-prev" style="display:inline-block;"></span></a>
                                     <div id="trackSlider" style="display:inline-block; width: 75%;"></div>
                                     <a href="#" id="trackForward" title="Faster"><span class="ui-icon ui-icon-seek-next" style="display:inline-block;"></span></a>
                                     <a href="#" id="trackPlay" title="Play/Pause"><span class="ui-icon ui-icon-play" style="display:inline-block;"></span></a>
                                     <a href="#" id="trackStop" title="Stop"><span class="ui-icon ui-icon-stop" style="display:inline-block;"></span></a>
                                 </td></tr>
        <tr><td align="right">Map Date:</td>
            <td colspan="3"><input type="text" id="txtTrackMapDate" style="width:90px"/> </td>
        </tr>
        <tr><td align="right">Time Range:</td>
            <td colspan="3">
                <input type="text" id="txtTrackMapFromTime" style="width:58px"/>
                <input type="text" id="txtTrackMapToTime" style="width:58px"/>
                <input type="button" id="btnShowTrackMapbyDate" value="Draw Map"/>
            </td>
        </tr>
        <tr name="trackControls">
            <td align="right">Distance:</td>
            <td colspan="3"><b><span id="trackPathLength">0</span> out of
                                <span id="trackTotalPathLength"></span> Kms</b>
                <span id="lblUnitIdTrackMap" style="visibility:hidden;"></span>
                <span id="lblAssetNameTrackMap" style="visibility:hidden;"></span></td>
        </tr>
        <tr name="trackControls">
            <td align="right"><b>Route </b>Buffer:</td>
            <td><input type="text" id="txtActivityBuffer" style="width:58px"/> mtrs</td>
            <td colspan="2" style="text-align: right"><input type="button" id="btnDrawActivityRoute" value="Draw"/>
            <input type="button" id="btnSaveActivityRoute" value="Save" style="display: none;"/></td>
        </tr>
    </table>
    <table class="myTable" name="trackControls">
        <tr>
            <th>Date</th>
            <th>Ign</th>
            <th>GSM</th>
            <th>Speed.Kmph</th>
            <th>Lat</th>
            <th>Long</th>
        </tr>
        <tr>
            <td align="center" id="trackDate" ></td>
            <td align="center"><img id="imgTrackIgnition"/></td>
            <td align="center"><img id="imgTrackSignal"/></td>
            <td align="center" id="trackSpeed"></td>
            <td align="center" id="trackLati"></td>
            <td align="center" id="trackLongi"></td>
        </tr>
    </table>
</div>